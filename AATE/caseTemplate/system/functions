FoamFile
{
    format      ascii;
    class       dictionary;
    location    "system";
    object      functions;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#includeFunc    multiValveEngineState
#includeFunc    checkMesh(executeControl=timeStep, executeInterval=50)
#includeFunc    scalarTransport(tracer)
#includeFunc    cutPlanes
#includeFunc    patchSurface(name=valveSurfaces, patch="(iv|ev|piston).*",
                writeControl=adjustableRunTime, writeInterval=5)
#includeFunc    time(name=cpuTime, perTimeStep=yes)
#includeFunc    timeStep
#includeFunc    CourantNo(executeControl=timeStep, executeInterval=1, executeAtStart=false)
#includeFunc cellMax
(
    name=maxCo,
    fields=(Co)
)
#includeFunc volAverage
(
    name=pTAvg_chamber,
    fields=(p T),
    select=cellZone,
    cellZone=combustionChamber
)
#includeFunc cellMax
(
    name=pTMax_chamber,
    fields=(p T),
    select=cellZone,
    cellZone=combustionChamber
)
#includeFunc cellMin
(
    name=pTMin_chamber,
    fields=(p T),
    select=cellZone,
    cellZone=combustionChamber
)
#includeFunc stopAtTimeStep(minDeltaT=1e-12, action=writeNow)
fluidMaxDeltaT
{
    type            fluidMaxDeltaT;
    EVO 128.74;
    EVC 365.47;
    IVO 357.74;
    IVC 594.47;

    dT  $controlDict!maxDeltaT;
    dT_valve    #calc "$dT*0.1";

    maxCo
    {
        type            table;
        values
        (
            ( 0 3 )
            ( $EVO 10 )
            ( $IVO 5 )
            ( $IVC 3 )
            ( 720 3 )
        );
        interpolationScheme step;
        outOfBounds     repeat;
    }
    maxDeltaT
    {
        type            table;
        values
        (
            ( 0 $dT )
            ( $EVO              $dT_valve )
            ( #calc "$EVO+2"    $dT )
            ( $IVO              $dT_valve )
            ( #calc "$IVO+2"    $dT )
            ( #calc "$EVC-2"    $dT_valve )
            ( $EVC              $dT )
            ( #calc "$IVC-2"    $dT_valve )
            ( $IVC              $dT )
            ( 720               $dT_valve )
        );
        interpolationScheme step;
        outOfBounds     repeat;
    }
}
// ************************************************************************* //
